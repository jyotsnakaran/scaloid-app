<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="scaloid.example"
          android:versionCode="1"
          android:versionName="1.0">

  <uses-sdk android:targetSdkVersion="24" android:minSdkVersion="10"/>

  <uses-feature
          android:name="android.hardware.usb.host"
          android:required="true" />

  <uses-permission android:name="android.permission.CAMERA" />
  <uses-permission android:name="android.permission.VIBRATE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />


  <application android:label="Scaloid App" >
    <activity android:name=".HelloScaloid"
              android:label="Payment App">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".MainActivity" android:label="Magnetic card">
    </activity>
    <activity android:name=".TestActivity" android:label="Test ACtivity">
    </activity>
  </application>
</manifest>
